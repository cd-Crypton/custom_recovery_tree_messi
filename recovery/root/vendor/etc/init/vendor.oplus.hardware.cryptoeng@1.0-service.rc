on post-fs-data
    mkdir /data/vendor_de 0770 root root
    mkdir /data/vendor_de/0 0770 root root
    mkdir /data/vendor_de/0/cryptoeng 0770 root root

service cryptoeng-1-0 /system/bin/vendor.oplus.hardware.cryptoeng@1.0-service
    class hal
    user root
    group root input sdcard_rw sdcard_r
    disabled
    seclabel u:r:recovery:s0
    
on property:ro.crypto.state=encrypted && property:hwservicemanager.ready=true
    start cryptoeng-1-0
